<div class="border-t pt-4 mt-4" data-core-index="<%= core_index %>">
  <h4 class="font-semibold mb-3">Core Type <%= core_index.to_i + 1 %></h4>
  
  <div class="grid grid-cols-2 gap-4 mb-4">
    <div>
      <label class="block text-sm font-medium mb-1">Core Name:</label>
      <input type="text" 
             name="ip_configurations[<%= ip_type %>][core_mappings][<%= core_index %>][core]"
             class="w-full px-3 py-2 border rounded"
             placeholder="Enter core name">
    </div>
    
    <div>
      <label class="block text-sm font-medium mb-1">Core Count:</label>
      <input type="text" 
             name="ip_configurations[<%= ip_type %>][core_mappings][<%= core_index %>][core_count]"
             class="w-full px-3 py-2 border rounded"
             placeholder="Enter count">
    </div>
    
    <div>
      <label class="block text-sm font-medium mb-1">Supply Name:</label>
      <input type="text" 
            name="ip_configurations[<%= ip_type %>][core_mappings][<%= core_index %>][supply]"
            class="w-full px-3 py-2 border rounded"
            placeholder="Enter supply"
            data-supply-field="true"
            data-core-index="<%= core_index %>">
    </div>
    
    <div>
      <label class="block text-sm font-medium mb-1">Clock:</label>
      <input type="text" 
             name="ip_configurations[<%= ip_type %>][core_mappings][<%= core_index %>][clock]"
             class="w-full px-3 py-2 border rounded"
             placeholder="Enter clock">
    </div>
  </div>
  
  <!-- Production Parameters Toggle -->
  <div class="mb-4">
    <label class="flex items-center cursor-pointer">
      <input type="checkbox" 
             name="ip_configurations[<%= ip_type %>][show_production_for_core][<%= core_index %>]"
             class="mr-2"
             data-action="change->ip-configuration#toggleProduction"
             data-core-index="<%= core_index %>">
      <span>Production Parameters for Core Type <%= core_index + 1 %></span>
    </label>
  </div>
  
  <div class="hidden pl-4" data-production-section="<%= core_index %>">
    <%= render 'production_parameters', ip_type: ip_type, core_index: core_index %>
  </div>
  
  <!-- Charz Parameters Toggle -->
  <div class="mb-4">
    <label class="flex items-center cursor-pointer">
      <input type="checkbox" 
             name="ip_configurations[<%= ip_type %>][show_charz_for_core][<%= core_index %>]"
             class="mr-2"
             data-action="change->ip-configuration#toggleCharz"
             data-core-index="<%= core_index %>">
      <span>Charz Parameters for Core Type <%= core_index + 1 %></span>
    </label>
  </div>
  
  <div class="hidden pl-4" data-charz-section="<%= core_index %>">
    <%= render 'charz_parameters', ip_type: ip_type, core_index: core_index %>
  </div>
</div>
